#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int coins,x,y;
    scanf("%d%d%d",&coins,&x,&y);
    int longben=coins*x/100;
    coins=coins-longben;
    int blackbeard=coins*y/100;
    coins=coins-blackbeard;
    int other=coins/3;
    printf("%d\n%d\n%d",longben,blackbeard,other);
    return 0;
}
