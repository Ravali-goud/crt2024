#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int n;
    scanf("%d",&n);
    int a[n],i,j;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int s1=0,s2=0;
    for(j=0;j<n;j++)
    {
        if(a[j]%2!=0)
        {
            s1=s1+a[j];
            
           
        }
         
        if(a[j]%2==0)
        {
            s2=s2+a[j];
           
        }
         
    }printf("%d\n%d",s1,s2);
    
    return 0;
}
