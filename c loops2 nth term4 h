#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int n;
    scanf("%d",&n);
        int k=14,j=0,res=0;
        for(int i=0;i<n;i++)
        {
            if(i%2==0)
            {
                res=k;
            }
        else
        {
            res=2*k;
            int l=(int)pow(2,j);
            k=k+6*l;
            j++;
        }
        
    }
    printf("%d",res);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
