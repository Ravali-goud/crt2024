#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int unit, b;
    scanf("%d",&unit);
    if(unit<=200)
    {
       b=unit*0.5;
    }
    else if(unit<=400)
    {
       b=unit*0.65+100;
    }
    else if(unit<=600)
    {
        b=unit*0.80+200;
    }
    else if(unit>600)
    {
       b=unit*1.25+425;
    }
     printf("Rs.%d",b);
    return 0;
}
